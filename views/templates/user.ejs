<li class="list-group-item d-flex justify-content-between align-items-center">
    <span><%= user.name %> (<%= user.email %>) - Role: <strong><%= user.user_type %></strong></span>
  
    <% if (user.user_type === "user") { %>
      <a class="btn btn-sm btn-success" href="/promote/<%= user.email %>">Promote to Admin</a>
    <% } else if (user.user_type === "admin") { %>
      <a class="btn btn-sm btn-warning" href="/demote/<%= user.email %>">Demote to User</a>
    <% } %>
  </li>
  